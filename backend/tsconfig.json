{
    // Visit https://aka.ms/tsconfig to read more about this file
    "extends": ["@tsconfig/node24/tsconfig.json"],
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "noEmitOnError": true,
        "checkJs": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "typeRoots": ["src/@types", "./node_modules/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
